[flake8]
max-line-length = 127
ignore = 
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    W504,  # line break after binary operator
    C901   # too complex
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    env,
    venv
per-file-ignores = 
    __init__.py:F401